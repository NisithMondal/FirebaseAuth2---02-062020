<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    android:orientation="vertical"
    >



    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        />

    <Button
        android:id="@+id/create_account_button"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Create New Account"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:background="@drawable/email_password_button_background"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/ic_mail_icon"
        android:layout_below="@+id/progress_bar"
        android:drawablePadding="15dp"
        />


    <Button
        android:id="@+id/google_signIn_button"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Sign Up With Google"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textColor="#0288D1"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@drawable/google_signin_button_background"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/create_account_button"
        android:drawableStart="@drawable/google_logo"
        android:textAllCaps="false"
        />



    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/google_signIn_button"
        android:visibility="gone"

        />


    <Button
        android:id="@+id/button"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Sign Up With Facebook"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@drawable/facebook_signin_button_background"
        android:padding="10dp"
        android:layout_below="@+id/facebook_login_button"
        android:layout_centerHorizontal="true"
        android:drawableStart="@drawable/facebook_icon"
        android:textAllCaps="false"
        android:drawablePadding="14dp"
        />


</RelativeLayout>